{
  "extends": "@kleros/kleros-v2-tsconfig/base.json",
  "compilerOptions": {
    "outDir": "lib",
    "paths": {
      "~*": [
        "./*"
      ],
      "src*": [
        "./src*"
      ],
      "dataMappings*": [
        "./src/dataMappings*"
      ]
    },
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "build",
    "dist",
    "lib",
    "node_modules",
    "scripts",
    "webpack"
  ]
}
